CFLAG 	=	-g

OBJS	=	$(SRCS:.c=.o)

NAME	=	zappy.so

all:		$(NAME)

$(NAME):	$(SRC)
		$(CC) -shared -o $(NAME) -fPIC $(SRCS) -I $(INCS) $(CFLAG)

clean:
		rm $(OBJS)

fclean:		clean
		rm $(NAME)

re:		fclean all
